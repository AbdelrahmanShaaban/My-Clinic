<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BookDetails">

    <TextView
            android:text="Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/datetxt" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <Button
            android:text="choosedate"
            android:layout_width="166dp"
            android:layout_height="49dp" app:layout_constraintTop_toTopOf="@+id/datetxt"
            android:id="@+id/datebtn" app:layout_constraintStart_toEndOf="@+id/datetxt"
            android:layout_marginStart="50dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/datetxt"
            android:background="@drawable/roundbutton"
            app:layout_constraintHorizontal_bias="0.804" app:layout_constraintVertical_bias="0.842"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:inputType="textPersonName"
            android:gravity="top"
            android:hint="معلومات اضافية"
            android:ems="10"
            android:id="@+id/noteedittxt" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="136dp"
            app:layout_constraintTop_toBottomOf="@+id/datetxt" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#E1E6E6" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="confirm"
            android:layout_width="250dp"
            android:layout_height="65dp"
            android:id="@+id/confirmbtn" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/noteedittxt" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:background="@drawable/roundbutton"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
    />
    <TextView
            android:text="Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timetxt"
            app:layout_constraintTop_toBottomOf="@+id/datetxt" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="32dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <Button
            android:text="chooseTime"
            android:layout_width="169dp"
            android:layout_height="50dp"
            android:id="@+id/timebtn" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/datebtn" app:layout_constraintStart_toEndOf="@+id/timetxt"
            android:layout_marginStart="50dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:background="@drawable/roundbutton"
            app:layout_constraintHorizontal_bias="0.793"/>
</android.support.constraint.ConstraintLayout>