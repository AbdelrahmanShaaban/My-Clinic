<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" android:id="@+id/cardView">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="277dp"
                android:padding="8dp">


            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
                    android:layout_marginStart="8dp" android:id="@+id/textViewnamedoctor"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewemaildoctor"
                    app:layout_constraintTop_toBottomOf="@+id/textViewnamedoctor" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginTop="8dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewphodoctor"
                    app:layout_constraintTop_toBottomOf="@+id/textViewemaildoctor" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginTop="8dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewagedoctor"
                    app:layout_constraintTop_toBottomOf="@+id/textViewphodoctor" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginTop="8dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewdates"
                    app:layout_constraintTop_toBottomOf="@+id/textViewagedoctor" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginTop="8dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewtimes" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textViewdates"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewnotess"
                    app:layout_constraintTop_toBottomOf="@+id/textViewtimes"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginTop="8dp"/>
            <ImageView
                    android:layout_width="103dp"
                    android:layout_height="82dp" app:srcCompat="@drawable/ic_delete"
                    android:id="@+id/imageView2" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="85dp" android:layout_marginStart="188dp"
                    app:layout_constraintStart_toEndOf="@+id/textViewphodoctor"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="36dp"
                    android:layout_marginBottom="102dp" app:layout_constraintBottom_toBottomOf="parent"

            />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>