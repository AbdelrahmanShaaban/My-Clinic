<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".signup">

    <EditText
            android:id="@+id/editText3"
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"/>

    <EditText
            android:id="@+id/editText4"
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="122dp"
            android:ems="10"
            android:hint="password"
            android:inputType="textPassword"/>

    <EditText
            android:id="@+id/editText5"
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="180dp"
            android:ems="10"
            android:hint="Age"
            android:inputType="number"/>

    <EditText
            android:id="@+id/editText6"
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="64dp"
            android:ems="10"
            android:hint="E_mail"
            android:inputType="textEmailAddress"/>

    <EditText
            android:id="@+id/editText7"
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="239dp"
            android:ems="10"
            android:hint="Phone"
            android:inputType="phone"/>

    <RadioGroup
            android:layout_width="244dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="182dp" android:id="@+id/rg"
    >

        <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="178dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="User"
                android:onClick="select"/>

        <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="177dp"
                android:layout_height="48dp"
                android:layout_alignStart="@+id/radioButton"
                android:layout_weight="1"
                android:text="Doctor"
                android:onClick="select"/>


    </RadioGroup>

    <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="124dp"
            android:entries="@array/doc"
            android:visibility="visible"
            tools:visibility="visible"
    />
    <Button
            android:text="Signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/button3"
            android:onClick="signup"
            android:layout_marginBottom="8dp"
            android:background="@drawable/roundbutton"
    />
    <EditText
            android:layout_width="333dp"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:layout_alignParentStart="true" android:layout_marginStart="14dp"
            android:layout_alignParentTop="true" android:id="@+id/editText8" android:layout_marginTop="296dp"
            android:hint="Address"/>

</RelativeLayout>